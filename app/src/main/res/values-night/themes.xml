<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vermilion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/light_red_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/deep_dark_blue</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/dark_blue</item>
        <item name="android:colorBackground">@color/deep_dark_blue</item>
    </style>
</resources>
